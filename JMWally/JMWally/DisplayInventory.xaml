      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JMWally"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisplayInventory">

    <Grid>
        <Label x:Name="title" Content="Wally's World Database" HorizontalAlignment="Left" Margin="39,29,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Foreground="#FF002CF3"/>
        <Label Content="Current Inventory:" HorizontalAlignment="Left" Margin="39,90,0,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="22"/>
        <TextBlock x:Name="inventory" HorizontalAlignment="Left" Margin="73,132,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="287" Width="525"/>

    </Grid>
